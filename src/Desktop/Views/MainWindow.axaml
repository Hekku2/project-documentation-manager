<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Desktop.ViewModels"
    xmlns:conv="clr-namespace:Desktop.Converters"
    xmlns:behaviors="clr-namespace:Desktop.Behaviors"
    xmlns:controls="clr-namespace:Desktop.Controls"
    xmlns:models="clr-namespace:Desktop.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Desktop.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Width="1200" Height="800"
    Title="{Binding Title}">
    
    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAllCommand}" />
    </Window.KeyBindings>
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Name="MainMenu">
            <MenuItem Header="File">
                <MenuItem Header="Save" Command="{Binding SaveCommand}" InputGesture="Ctrl+S" />
                <MenuItem Header="Save All" Command="{Binding SaveAllCommand}" InputGesture="Ctrl+Shift+S" />
                <MenuItem Header="Settings" Command="{Binding SettingsCommand}" />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Logs" Command="{Binding ShowLogsCommand}" />
                <MenuItem Header="Errors" Command="{Binding ShowErrorsCommand}" />
            </MenuItem>
            <MenuItem Header="Compile">
                <MenuItem Header="Compile documentation" Command="{Binding EditorContent.BuildDocumentationCommand}" />
                <MenuItem Header="Validate" Command="{Binding EditorContent.ValidateCommand}" />
                <MenuItem Header="Validate All" Command="{Binding EditorContent.ValidateAllCommand}" />
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="250" />
                <!-- Splitter -->
                <ColumnDefinition Width="5" />
                <!-- Editor Area -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar/Explorer -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" 
                               Text="EXPLORER" 
                               Foreground="#CCCCCC" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />
                    
                    <!-- Loading indicator -->
                    <TextBlock DockPanel.Dock="Top"
                               Text="Loading..." 
                               Foreground="#CCCCCC" 
                               IsVisible="{Binding IsLoading}" 
                               HorizontalAlignment="Center" 
                               Margin="0,20" />
                    
                    <!-- File Explorer TreeView - fills remaining space -->
                    <TreeView ItemsSource="{Binding FileSystemItems}" 
                              Background="Transparent" 
                              Foreground="#CCCCCC"
                              IsVisible="{Binding !IsLoading}"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:FileSystemItemViewModel">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Icon area - only one icon visible at a time -->
                                    <!-- Loading indicator takes priority -->
                                    <Ellipse Width="12" Height="12" 
                                             Fill="#CCCCCC" 
                                             Margin="0,0,5,0"
                                             VerticalAlignment="Top"
                                             IsVisible="{Binding IsLoading}" />
                                    
                                    <!-- Directory Icon - visible when not loading and is directory -->
                                    <Path Width="20" Height="14" 
                                          Fill="#CCCCCC" 
                                          Margin="0,0,5,0"
                                          VerticalAlignment="Top"
                                          Data="{StaticResource FolderIcon}">
                                        <Path.IsVisible>
                                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                <Binding Path="!IsLoading"/>
                                                <Binding Path="IsDirectory"/>
                                            </MultiBinding>
                                        </Path.IsVisible>
                                    </Path>
                                    
                                    <!-- File Icon - visible when not loading and not directory -->
                                    <Path Width="20" Height="14" 
                                          Fill="#CCCCCC" 
                                          Margin="0,0,5,0"
                                          VerticalAlignment="Top"
                                          Data="{StaticResource FileIcon}">
                                        <Path.IsVisible>
                                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                <Binding Path="!IsLoading"/>
                                                <Binding Path="!IsDirectory"/>
                                            </MultiBinding>
                                        </Path.IsVisible>
                                    </Path>
                                    
                                    <!-- Item name -->
                                    <TextBlock Text="{Binding Name}" Foreground="#CCCCCC" VerticalAlignment="Center" Height="14" Margin="0,5,0,0" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.Styles>
                            <Style Selector="TreeViewItem" x:DataType="vm:FileSystemItemViewModel">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            </Style>
                        </TreeView.Styles>
                    </TreeView>
                </DockPanel>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch" />
            
            <!-- Editor Area -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Tab Bar -->
                        <RowDefinition Height="40" />
                        <!-- Editor Content -->
                        <RowDefinition Height="*" />
                        <!-- Log Output -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Tab Bar -->
                    <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding EditorTabBar.EditorTabs}" Margin="5,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EditorTabViewModel">
                                        <Border Name="TabBorder"
                                                Background="{Binding IsActive, Converter={x:Static conv:BoolToColorConverter.Instance}}"
                                                BorderBrush="#3E3E42"
                                                BorderThickness="0,0,1,0" 
                                                Margin="0,0,0,0">
                                            <Button Name="TabButton"
                                                    Command="{Binding SelectCommand}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    HorizontalContentAlignment="Stretch"
                                                    VerticalContentAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" Margin="15,6">
                                                    <TextBlock Name="TabTitle"
                                                               Text="{Binding DisplayTitle}" 
                                                               Foreground="#CCCCCC" 
                                                               VerticalAlignment="Center" />
                                                    <Button Content="×" 
                                                            Command="{Binding CloseCommand}"
                                                            Background="Transparent" 
                                                            Foreground="#CCCCCC" 
                                                            BorderThickness="0" 
                                                            Margin="8,0,0,0" 
                                                            Padding="2" 
                                                            FontSize="14"
                                                            VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Editor Content -->
                    <ScrollViewer Grid.Row="1" Name="EditorScrollViewer">
                        <Grid>
                            <TextBox Name="DocumentEditor" 
                                    Text="{Binding EditorContent.ActiveTab.Content, Mode=TwoWay}"
                                    Background="#1E1E1E" 
                                    Foreground="#D4D4D4"
                                    CaretBrush="#FFFFFF"
                                    SelectionBrush="#264F78"
                                    SelectionForegroundBrush="#FFFFFF"
                                    FontFamily="monospace"
                                    FontSize="14"
                                    AcceptsReturn="True"
                                    AcceptsTab="True"
                                    TextWrapping="Wrap"
                                    BorderThickness="0"
                                    Margin="20"
                                    Watermark="Start typing or open a file..."
                                    IsVisible="{Binding !EditorContent.IsActiveTabSettings}">
                                <TextBox.Styles>
                                    <!-- Remove hover highlighting -->
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#1E1E1E" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                    <!-- Keep focus highlighting -->
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#1E1E1E" />
                                        <Setter Property="BorderBrush" Value="#007ACC" />
                                        <Setter Property="BorderThickness" Value="1" />
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                            
                            <!-- Validation Error Overlay -->
                            <controls:ValidationErrorOverlay 
                                ValidationResult="{Binding EditorContent.CurrentValidationResult}"
                                TargetTextBox="{Binding #DocumentEditor}"
                                CurrentFileName="{Binding EditorContent.ActiveFilePath}"
                                IsHitTestVisible="False"
                                IsVisible="{Binding !EditorContent.IsActiveTabSettings}" />
                            
                            <!-- Settings Content -->
                            <ScrollViewer IsVisible="{Binding EditorContent.IsActiveTabSettings}"
                                          Background="#1E1E1E">
                                <StackPanel Margin="30" Spacing="20">
                                    <TextBlock Text="Application Settings" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,0,20" />
                                    
                                    <!-- Default Project Folder -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Default Project Folder:" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#CCCCCC" 
                                                   FontSize="14" />
                                        <TextBox Text="{Binding ApplicationOptions.DefaultProjectFolder}" 
                                                 IsReadOnly="True"
                                                 Background="#2D2D30" 
                                                 Foreground="#D4D4D4" 
                                                 BorderBrush="#3E3E42" 
                                                 Padding="8" 
                                                 FontFamily="monospace" />
                                    </StackPanel>
                                    
                                    <!-- Default Output Folder -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Default Output Folder:" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#CCCCCC" 
                                                   FontSize="14" />
                                        <TextBox Text="{Binding ApplicationOptions.DefaultOutputFolder}" 
                                                 IsReadOnly="True"
                                                 Background="#2D2D30" 
                                                 Foreground="#D4D4D4" 
                                                 BorderBrush="#3E3E42" 
                                                 Padding="8" 
                                                 FontFamily="monospace" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </ScrollViewer>
                    
                    <!-- Bottom Panel -->
                    <Border Grid.Row="2" Background="#0E0E0E" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" IsVisible="{Binding IsBottomPanelVisible}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Bottom Tab Bar -->
                                <RowDefinition Height="35" />
                                <!-- Bottom Content -->
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Bottom Tab Bar -->
                            <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding BottomPanelTabs}" Margin="5,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:BottomPanelTabViewModel">
                                                <Border Name="BottomTabBorder"
                                                        Background="{Binding IsActive, Converter={x:Static conv:BoolToColorConverter.Instance}}"
                                                        BorderBrush="#3E3E42"
                                                        BorderThickness="0,0,1,0" 
                                                        Margin="0,0,0,0">
                                                    <Button Name="BottomTabButton"
                                                            Command="{Binding SelectCommand}"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="0"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="Stretch">
                                                        <StackPanel Orientation="Horizontal" Margin="15,6">
                                                            <TextBlock Name="BottomTabTitle"
                                                                       Text="{Binding Title}" 
                                                                       Foreground="#CCCCCC" 
                                                                       VerticalAlignment="Center" />
                                                            <Button Content="×" 
                                                                    Command="{Binding CloseCommand}"
                                                                    Background="Transparent" 
                                                                    Foreground="#CCCCCC" 
                                                                    BorderThickness="0" 
                                                                    Margin="8,0,0,0" 
                                                                    Padding="2" 
                                                                    FontSize="14"
                                                                    VerticalAlignment="Center"
                                                                    IsVisible="{Binding IsClosable}" />
                                                        </StackPanel>
                                                    </Button>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Bottom Content -->
                            <ScrollViewer Grid.Row="1" Name="BottomScrollViewer">
                                <Grid>
                                    <!-- Text content for non-log tabs (fallback) -->
                                    <TextBox Name="BottomOutput" 
                                            Text="{Binding ActiveBottomTab.Content}"
                                            Background="#0E0E0E" 
                                            Foreground="#CCCCCC"
                                            FontFamily="monospace"
                                            FontSize="12"
                                            IsReadOnly="True"
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            BorderThickness="0"
                                            Margin="20"
                                            IsVisible="False">
                                    
                                        <TextBox.Styles>
                                            <!-- Remove all highlighting for read-only -->
                                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                                <Setter Property="Background" Value="#0E0E0E" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                            </Style>
                                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                                <Setter Property="Background" Value="#0E0E0E" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                            </Style>
                                        </TextBox.Styles>
                                    </TextBox>
                                    
                                    <!-- Colored log display for log entries -->
                                    <controls:ColoredLogDisplay Name="ColoredLogOutput"
                                            LogEntries="{Binding ActiveBottomTab.LogEntries}"
                                            Margin="20"
                                            IsVisible="{Binding ActiveBottomTab.ErrorEntries.Count, Converter={x:Static conv:CountToBooleanConverter.ZeroIsTrue}}" />
                                    
                                    <!-- Error entries with navigation -->
                                    <ItemsControl ItemsSource="{Binding ActiveBottomTab.ErrorEntries}"
                                                  Background="#0E0E0E"
                                                  Margin="20"
                                                  IsVisible="{Binding ActiveBottomTab.ErrorEntries.Count, Converter={x:Static conv:CountToBooleanConverter.ZeroIsFalse}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="models:ErrorEntry">
                                                <StackPanel Margin="0,0,0,15">
                                                    <!-- Error/Warning message -->
                                                    <TextBlock Text="{Binding DisplayText}" 
                                                               Foreground="{Binding Type, Converter={x:Static conv:ErrorTypeToColorConverter.Instance}}" 
                                                               FontFamily="monospace" 
                                                               FontSize="12" 
                                                               TextWrapping="Wrap" />
                                                    
                                                    <!-- File link (if available) -->
                                                    <Button Content="{Binding FileDisplayText}"
                                                            Command="{Binding NavigateCommand}"
                                                            HorizontalAlignment="Left"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Foreground="#569CD6"
                                                            FontFamily="monospace"
                                                            FontSize="12"
                                                            Padding="0"
                                                            Margin="10,2,0,0"
                                                            IsVisible="{Binding HasFileNavigation}"
                                                            Cursor="Hand">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Foreground" Value="#77A3E0" />
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>
                                                    
                                                    <!-- Source context (if available) -->
                                                    <TextBlock Text="{Binding SourceContext, StringFormat='  Context: {0}'}"
                                                               Foreground="#888888"
                                                               FontFamily="monospace"
                                                               FontSize="12"
                                                               Margin="10,2,0,0"
                                                               IsVisible="{Binding SourceContext, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
