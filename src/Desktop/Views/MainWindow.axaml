<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Desktop.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Desktop.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Title="{Binding Title}">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Name="MainMenu">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut" />
                <MenuItem Header="Copy" />
                <MenuItem Header="Paste" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Explorer" />
                <MenuItem Header="Terminal" />
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="250" />
                <!-- Splitter -->
                <ColumnDefinition Width="5" />
                <!-- Editor Area -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar/Explorer -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" 
                               Text="EXPLORER" 
                               Foreground="#CCCCCC" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />
                    
                    <!-- Loading indicator -->
                    <TextBlock DockPanel.Dock="Top"
                               Text="Loading..." 
                               Foreground="#CCCCCC" 
                               IsVisible="{Binding IsLoading}" 
                               HorizontalAlignment="Center" 
                               Margin="0,20" />
                    
                    <!-- File Explorer TreeView - fills remaining space -->
                    <TreeView ItemsSource="{Binding FileSystemItems}" 
                              Background="Transparent" 
                              Foreground="#CCCCCC"
                              IsVisible="{Binding !IsLoading}"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:FileSystemItemViewModel">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Directory Icon -->
                                    <TextBlock Text="📁" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding IsDirectory}" />
                                    
                                    <!-- File Icon -->
                                    <TextBlock Text="📄" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding !IsDirectory}" />
                                    
                                    <!-- Loading indicator for individual items -->
                                    <TextBlock Text="⏳" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding IsLoading}" />
                                    
                                    <!-- Item name -->
                                    <TextBlock Text="{Binding Name}" Foreground="#CCCCCC" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.Styles>
                            <Style Selector="TreeViewItem" x:DataType="vm:FileSystemItemViewModel">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            </Style>
                        </TreeView.Styles>
                    </TreeView>
                </DockPanel>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch" />
            
            <!-- Editor Area -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Tab Bar -->
                        <RowDefinition Height="35" />
                        <!-- Editor Content -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Tab Bar -->
                    <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding EditorTabs}" Margin="5,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EditorTabViewModel">
                                        <Border Background="#3E3E42" 
                                                BorderBrush="#3E3E42" 
                                                BorderThickness="0,0,1,0" 
                                                Margin="0,0,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="15,8">
                                                <TextBlock Text="{Binding DisplayTitle}" 
                                                           Foreground="#CCCCCC" 
                                                           VerticalAlignment="Center" />
                                                <Button Content="×" 
                                                        Background="Transparent" 
                                                        Foreground="#CCCCCC" 
                                                        BorderThickness="0" 
                                                        Margin="8,0,0,0" 
                                                        Padding="4" 
                                                        FontSize="16" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Editor Content -->
                    <ScrollViewer Grid.Row="1" Name="EditorScrollViewer">
                        <TextBox Name="DocumentEditor" 
                                Text="{Binding ActiveTab.Content, Mode=TwoWay}"
                                Background="Transparent" 
                                Foreground="#D4D4D4"
                                FontFamily="Consolas, 'Courier New', monospace"
                                FontSize="14"
                                AcceptsReturn="True"
                                AcceptsTab="True"
                                TextWrapping="Wrap"
                                BorderThickness="0"
                                Margin="20"
                                Watermark="Start typing or open a file..." />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
