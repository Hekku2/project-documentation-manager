<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Desktop.ViewModels"
    xmlns:conv="clr-namespace:Desktop.Converters"
    xmlns:behaviors="clr-namespace:Desktop.Behaviors"
    xmlns:controls="clr-namespace:Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Desktop.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Title="{Binding Title}">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Name="MainMenu">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Logs" Command="{Binding ShowLogsCommand}" />
                <MenuItem Header="Errors" Command="{Binding ShowErrorsCommand}" />
            </MenuItem>
            <MenuItem Header="Build">
                <MenuItem Header="Build documentation" Command="{Binding BuildDocumentationCommand}" />
                <MenuItem Header="Validate" Command="{Binding ValidateCommand}" />
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="250" />
                <!-- Splitter -->
                <ColumnDefinition Width="5" />
                <!-- Editor Area -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar/Explorer -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" 
                               Text="EXPLORER" 
                               Foreground="#CCCCCC" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />
                    
                    <!-- Loading indicator -->
                    <TextBlock DockPanel.Dock="Top"
                               Text="Loading..." 
                               Foreground="#CCCCCC" 
                               IsVisible="{Binding IsLoading}" 
                               HorizontalAlignment="Center" 
                               Margin="0,20" />
                    
                    <!-- File Explorer TreeView - fills remaining space -->
                    <TreeView ItemsSource="{Binding FileSystemItems}" 
                              Background="Transparent" 
                              Foreground="#CCCCCC"
                              IsVisible="{Binding !IsLoading}"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:FileSystemItemViewModel">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Directory Icon -->
                                    <TextBlock Text="ðŸ“" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding IsDirectory}" />
                                    
                                    <!-- File Icon -->
                                    <TextBlock Text="ðŸ“„" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding !IsDirectory}" />
                                    
                                    <!-- Loading indicator for individual items -->
                                    <TextBlock Text="â³" 
                                               Foreground="#CCCCCC" 
                                               Margin="0,0,5,0"
                                               IsVisible="{Binding IsLoading}" />
                                    
                                    <!-- Item name -->
                                    <TextBlock Text="{Binding Name}" Foreground="#CCCCCC" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.Styles>
                            <Style Selector="TreeViewItem" x:DataType="vm:FileSystemItemViewModel">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            </Style>
                        </TreeView.Styles>
                    </TreeView>
                </DockPanel>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch" />
            
            <!-- Editor Area -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Tab Bar -->
                        <RowDefinition Height="35" />
                        <!-- Editor Content -->
                        <RowDefinition Height="*" />
                        <!-- Log Output -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Tab Bar -->
                    <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding EditorTabs}" Margin="5,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EditorTabViewModel">
                                        <Border Name="TabBorder"
                                                Background="{Binding IsActive, Converter={x:Static conv:BoolToColorConverter.Instance}}"
                                                BorderBrush="#3E3E42"
                                                BorderThickness="0,0,1,0" 
                                                Margin="0,0,0,0">
                                            <Button Name="TabButton"
                                                    Command="{Binding SelectCommand}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                    HorizontalContentAlignment="Stretch"
                                                    VerticalContentAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" Margin="15,8">
                                                    <TextBlock Name="TabTitle"
                                                               Text="{Binding DisplayTitle}" 
                                                               Foreground="#CCCCCC" 
                                                               VerticalAlignment="Center" />
                                                    <Button Content="Ã—" 
                                                            Command="{Binding CloseCommand}"
                                                            Background="Transparent" 
                                                            Foreground="#CCCCCC" 
                                                            BorderThickness="0" 
                                                            Margin="8,0,0,0" 
                                                            Padding="4" 
                                                            FontSize="16" />
                                                </StackPanel>
                                            </Button>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Editor Content -->
                    <ScrollViewer Grid.Row="1" Name="EditorScrollViewer">
                        <Grid>
                            <TextBox Name="DocumentEditor" 
                                    Text="{Binding ActiveTab.Content, Mode=TwoWay}"
                                    Background="#1E1E1E" 
                                    Foreground="#D4D4D4"
                                    CaretBrush="#FFFFFF"
                                    SelectionBrush="#264F78"
                                    SelectionForegroundBrush="#FFFFFF"
                                    FontFamily="monospace"
                                    FontSize="14"
                                    AcceptsReturn="True"
                                    AcceptsTab="True"
                                    TextWrapping="Wrap"
                                    BorderThickness="0"
                                    Margin="20"
                                    Watermark="Start typing or open a file...">
                                <TextBox.Styles>
                                    <!-- Remove hover highlighting -->
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#1E1E1E" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                    <!-- Keep focus highlighting -->
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#1E1E1E" />
                                        <Setter Property="BorderBrush" Value="#007ACC" />
                                        <Setter Property="BorderThickness" Value="1" />
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                            
                            <!-- Validation Error Overlay -->
                            <controls:ValidationErrorOverlay 
                                ValidationResult="{Binding CurrentValidationResult}"
                                TargetTextBox="{Binding #DocumentEditor}"
                                IsHitTestVisible="False" />
                        </Grid>
                    </ScrollViewer>
                    
                    <!-- Bottom Panel -->
                    <Border Grid.Row="2" Background="#0E0E0E" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" IsVisible="{Binding IsBottomPanelVisible}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Bottom Tab Bar -->
                                <RowDefinition Height="35" />
                                <!-- Bottom Content -->
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Bottom Tab Bar -->
                            <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding BottomPanelTabs}" Margin="5,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:BottomPanelTabViewModel">
                                                <Border Name="BottomTabBorder"
                                                        Background="{Binding IsActive, Converter={x:Static conv:BoolToColorConverter.Instance}}"
                                                        BorderBrush="#3E3E42"
                                                        BorderThickness="0,0,1,0" 
                                                        Margin="0,0,0,0">
                                                    <Button Name="BottomTabButton"
                                                            Command="{Binding SelectCommand}"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="0"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="Stretch">
                                                        <StackPanel Orientation="Horizontal" Margin="15,8">
                                                            <TextBlock Name="BottomTabTitle"
                                                                       Text="{Binding Title}" 
                                                                       Foreground="#CCCCCC" 
                                                                       VerticalAlignment="Center" />
                                                            <Button Content="Ã—" 
                                                                    Command="{Binding CloseCommand}"
                                                                    Background="Transparent" 
                                                                    Foreground="#CCCCCC" 
                                                                    BorderThickness="0" 
                                                                    Margin="8,0,0,0" 
                                                                    Padding="4" 
                                                                    FontSize="16"
                                                                    IsVisible="{Binding IsClosable}" />
                                                        </StackPanel>
                                                    </Button>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Bottom Content -->
                            <ScrollViewer Grid.Row="1" Name="BottomScrollViewer">
                                <TextBox Name="BottomOutput" 
                                        Text="{Binding ActiveBottomTab.Content}"
                                        Background="#0E0E0E" 
                                        Foreground="#CCCCCC"
                                        FontFamily="monospace"
                                        FontSize="12"
                                        IsReadOnly="True"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        BorderThickness="0"
                                        Margin="20">
                                    <TextBox.Styles>
                                        <!-- Remove all highlighting for read-only -->
                                        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                            <Setter Property="Background" Value="#0E0E0E" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>
                                        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                            <Setter Property="Background" Value="#0E0E0E" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>
                                    </TextBox.Styles>
                                </TextBox>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
